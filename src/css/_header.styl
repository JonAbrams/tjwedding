.lang-picker
  display flex
  justify-content flex-end
  margin 10px auto
  width 50%
  font-size 1.5rem

.lang-picker li
  list-style none
  text-transform uppercase
  cursor pointer
  margin 0 5px
  position relative
  &.lang-active:after
    content ''
    height 2px
    width 10px
    position absolute
    left 50%
    margin-left -5px
    display block
    background darkBlue

.hero
  background-image url(images/panam.jpg)
  background-position center center
  background-repeat no-repeat
  background-attachment fixed
  background-size: cover

.hero .wrapper
  height 100%
  width 100%


.hero .title-group
  padding 200px 0

.hero .title-group__circle
  height 300px
  width 300px
  background-color rgba(255, 221, 74, 0.5)
  display flex
  flex-direction column
  justify-content center
  align-items center
  border-radius 50%
  margin 0 auto
