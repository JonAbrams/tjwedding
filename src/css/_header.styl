.header
  padding 0

.hero
  position relative
  font-size 0
  &:before
    content ""
    display inline-block
    padding-bottom 70%
    height auto
    vertical-align middle


.hero .hero__asset
  background-image url(images/tj.jpg)
  background-position center
  background-size cover
  position absolute
  bottom 0
  left 0
  right 0
  top 0
  overflow hidden
  display flex
  margin 5% auto
  width 88%
  justify-content center
  align-items center
  transition filter .5s ease

.filtered
  filter grayscale(1)
  transition filter .5s ease

.hero__title-group
  position relative



.hero__title-group h1,
.hero__title-group h2
  color txtWhite
  font-size 50px
  line-height 1.5

.hero__title-group h2
  font-size 30px

.hero__title-group .hashtag
  position absolute
  font-size 150px
  left 50%
  transform translate(-50%, -50%)
  top 50%
  opacity 0.3
  color berryRed
  letter-spacing 2rem
