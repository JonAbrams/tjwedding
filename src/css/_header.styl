.hero
  background-image url(images/panam.jpg)
  background-position center center
  background-repeat no-repeat
  background-attachment fixed
  background-size: cover

.hero .wrapper
  height 100%
  width 100%


.hero .title-group
  padding 270px 0

.hero .title-group__circle
  height 300px
  width 300px
  background-color rgba(255, 221, 74, 0.5)
  background-image url(images/bg_circle.png)
  background-repeat no-repeat
  display flex
  flex-direction column
  justify-content center
  align-items center
  border-radius 50%
  margin 0 auto

.hero h1, .hero h2
  color txtWhite

.hero h2
  font-family 'Open Sans', sans-serif
  font-size 2.4rem
  letter-spacing 0.4rem
