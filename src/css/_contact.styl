#contact
  background-color darkblue
  color txtWhite
  height 100vh
  h4
    display inline-block

#contact .tel
  display inline-block
  margin-left 10px

#contact .email
  margin-top 0

.icon-group
  text-align center
  display flex
  justify-content center
  margin 20px auto 0
  position relative
  max-width 580px
  .fa
    line-height 8rem
    font-size 5rem
    height 8rem
    width 8rem
    border 1px solid
    border-radius 50%
    margin 10px
    cursor pointer
    transition all .3s
    &:hover
      background txtWhite
      color darkblue
      transition all .3s
  .contact-textcontent
    margin-top 30px
    line-height 1.3
    position absolute
    opacity 0
    left 0
    width 100%
    transition opacity .3s
  input
    visibility hidden
    border-width 0
    font-size 0
    padding 0

input:checked + label
  .fa
    background txtWhite
    color darkblue
  .contact-textcontent
    opacity 1 !important
    transition opacity .3s

@media (max-width: 680px)
  #contact
    height 90vh
  .contact-textcontent p,
  .contact-textcontent a
    font-size 1.5rem
    width 380px
    padding 0 5px
    margin 0 auto
  .contact-textcontent a
    margin 10px auto

@media (max-width: 600px)
  #contact
    height 80vh
  .SpotifyPlayer
    display none
  .icon-group
    .contact-textcontent
      margin-top 15px
    .fa
      line-height 6rem
      font-size 3rem
      height 6rem
      width 6rem

@media (max-width: 420px)
  .contact-textcontent p,
  .contact-textcontent a
    font-size 1.3rem
    width 300px
    padding 0
  .contact-textcontent a
    margin 5px auto 0
    width auto
