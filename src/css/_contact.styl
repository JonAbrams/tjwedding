#contact
  background-color darkblue
  color txtWhite

.icon-group
  text-align center
  display flex
  justify-content center
  width 50%
  margin 30px auto
  position relative
  width 500px
  .fa
    line-height 10rem
    font-size 6rem
    height 10rem
    width 10rem
    border 1px solid
    border-radius 50%
    &:first-child
      margin-right 20px
  p
    margin-top 30px
    line-height 1.3
    position absolute
    opacity 0
    left 0
    width 100%
  input
    visibility hidden
    border-width 0
    font-size 0
    padding 0

input:checked + label
  p
    opacity 1 !important
