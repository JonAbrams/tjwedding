#contact
  background-color darkblue
  color txtWhite
  height 100vh

.icon-group
  text-align center
  display flex
  justify-content center
  width 50%
  margin 20px auto 0
  position relative
  width 500px
  .fa
    line-height 8rem
    font-size 5rem
    height 8rem
    width 8rem
    border 1px solid
    border-radius 50%
    margin 10px
    cursor pointer
    transition all .3s
    &:hover
      background txtWhite
      color darkblue
      transition all .3s
  .contact-textcontent
    margin-top 30px
    line-height 1.3
    position absolute
    opacity 0
    left 0
    width 100%
    transition opacity .3s
  input
    visibility hidden
    border-width 0
    font-size 0
    padding 0

input:checked + label
  .fa
    background txtWhite
    color darkblue
  .contact-textcontent
    opacity 1 !important
    transition opacity .3s
