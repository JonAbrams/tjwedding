nav ul
  display flex
  justify-content space-around
  width 50%
  margin 0 auto 50px
  padding 0
  li
    list-style none

nav ul li a
  text-decoration none
  text-transform uppercase
  color #000

.t-and-j
  text-align center
  font-size 40px
  display flex
  justify-content center
  align-items center
  margin 20px 0 40px
  font-family: 'Pacifico', cursive

.t, .j, .and
  height 60px
  width 60px
  line-height 60px
  color #fff

.t, .j
  border-radius 50%
  color blue
  background #fff
  position relative
  transform translateX(0)
  transition all 0.3s

.heart
  opacity 0
  position absolute
  z-index 1
  font-size 18px
  color blue

.hero.scrolled
  .t
    transform translateX(5px)
  .j
    transform translateX(-5px)
  .and
    display none
  .heart
    opacity 1
    transition opacity 0.3s
