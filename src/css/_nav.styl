header nav
  width 100%
  margin 0 auto
  background-color txtBlack
  border-bottom 3px solid paleGold
  display flex
  top 0
  position relative

.cloned
  border-top 2px solid paleGold
  display none

nav ul
  display flex
  justify-content space-between
  padding 0
  margin 0 auto
  position relative
  li
    list-style none
    font-size 1.5rem

nav ul li a
  text-decoration none
  text-transform uppercase
  color txtWhite
  padding 20px
  display inline-block
  &.active
    color blue


.lang-picker
  position absolute
  right 20px
  display flex
  font-size 1.5rem
  align-self center
  color txtWhite

.lang-picker li
  list-style none
  text-transform uppercase
  cursor pointer
  margin 0 5px
  position relative
  &.lang-active:after
    content ''
    height 2px
    width 10px
    position absolute
    left 50%
    margin-left -5px
    display block
    background paleGold

@media (max-width: 520px)
  nav ul li
    font-size 1.3rem
  nav ul li a
    padding 20px 10px
  .lang-picker
    right 10px
    font-size 1.3rem
@media (max-width: 400px)
  nav ul li
    font-size 1.2rem
  .lang-picker
    font-size 1rem
  nav ul li a
    padding 20px 10px
