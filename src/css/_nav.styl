nav
  width 100%
  margin 0
  background-color #fff

nav ul
  display flex
  justify-content space-between
  width 30%
  padding 0
  margin 0 auto
  border-bottom 4px solid darkBlue
  li
    list-style none
    font-size 1.5rem

nav ul li a
  text-decoration none
  text-transform uppercase
  color darkBlue
  padding 0 0 20px
  display inline-block
  &.active
    color blue
