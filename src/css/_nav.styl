nav
  width 30%
  min-width 300px
  margin 0 auto

nav ul
  display flex
  justify-content space-between
  width 100%
  padding 0
  margin 0
  border-bottom 4px solid #000
  li
    list-style none

nav ul li a
  text-decoration none
  text-transform uppercase
  color #000
  padding 0 0 20px
  display inline-block
  &.active
    color blue
