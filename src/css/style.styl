// Import all partials
@require './_*.styl'

* {
  box-sizing: border-box;
}

body
  margin 0

section
  padding 60px 0

section p
  margin 0 25px 25px

#home
  position relative
  padding: 100px 0
  border-bottom 4px solid berryRed

.invitation
  text-align center
  padding 60px 0
  background-color #fff
  width 50%
  margin 0 auto
  border 2px solid berryRed

.invitation + svg
  position absolute
  bottom 0
  right 0
  width 100%
  height 100%
  opacity 0.8
  z-index -1
  .faded
    opacity 0.6

.invitation p
  text-transform uppercase
  font-size 1.5rem
  white-space pre
  line-height 2.2rem

.invitation h2
  font-family 'Cormorant Upright', serif
  white-space pre
  letter-spacing: 0.2rem
  font-style: italic
  font-size 3.2rem
  margin-bottom 25px
