// Import all partials
@require './_*.styl'

* {
  box-sizing: border-box;
}

body
  margin 0

section
  padding 60px 0

section p
  margin 0

#home
  position relative
  padding: 100px 0
  border-bottom 4px solid paleGold

.invitation
  text-align center
  padding 0 0 100px
  background-color #fff
  width 30%
  margin 0 auto
  border 2px solid rgba(25, 23, 25, 0.5)
  min-width 480px
  position relative


.invitation-pattern
  position absolute
  bottom 0
  top 30%
  left 0
  right 0
.invitation-pattern > svg
  position absolute
  bottom 0
  right 0
  width 100%
  height 100%
  opacity 0.8
  z-index -1
  .faded
    opacity 0.6

.invitation p
  text-transform uppercase
  font-size 1.5rem
  white-space pre
  line-height 2.5rem
  position relative
  z-index 1
  margin-bottom 10px

.invitation h2
  white-space pre
  letter-spacing: 0.2rem
  margin-bottom 25px

.invitation .invitation__intro
  background #fff
  position relative
  top -10px
  font-size 2.8rem
  padding 0 30px
  display inline-block
  font-family 'Raleway', sans-serif
  &:after
    content "..."

.stamp-container
  width 300px
  text-align center
  margin 3px auto 10px
  transform rotate(-15deg)
  position relative
  z-index 0
  img
    width 100%

@media (max-width: 520px)
  #home
    padding-top 50px

  .invitation-pattern
    top 30%

@media (max-width: 520px)
  .invitation
    min-width 300px
    width 80%
    padding-bottom 40px
  .invitation p
    font-size 1.2rem
  .stamp-container img
    width 70%
  .invitation h2, .invitation .invitation__intro
    font-size 1.6rem
