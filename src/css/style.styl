// Import all partials
@require './_*.styl'

* {
  box-sizing: border-box;
}

body
  margin 0

section
  margin 60px 0

section p
  margin 0 25px 25px


.invitation
  text-align center
  position relative
  padding-bottom 60px

.invitation svg
  position absolute
  bottom 0
  right 0
  width 100%
  fill-opacity 0.5
  fill berryRed

.invitation p
  text-transform uppercase
  font-size 1.5rem
  white-space pre
  line-height 2.2rem

.invitation h2
  font-family 'Cormorant Upright', serif
  white-space pre
  letter-spacing: 0.2rem
  font-style: italic
  font-size 3.2rem
  margin-bottom 25px

.circle-images
  display flex
  justify-content space-around
  margin 50px auto
  padding 0 10%

.circle-image img
  width 240px
  height 240px
  border-radius 50%
  border 2px solid berryRed


.playlist-form
  margin 40px 0
  text-align center
