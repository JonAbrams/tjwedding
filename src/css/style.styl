// Import all partials
@require './_*.styl'

* {
  box-sizing: border-box;
}

body
  margin 0
  background url('./images/snow.png') repeat

section
  padding-top 50px

@media (max-width: 680px)
  section
    padding-top 25px

section p
  margin 0

#home, #contact, #about
  position relative
  padding: 100px 0
  border-bottom 4px solid paleGold

.invitation
  text-align center
  padding 100px 0 100px
  background #fff
  width 30%
  margin 0 auto
  border 2px solid rgba(25, 23, 25, 0.5)
  min-width 480px
  position relative


.invitation-pattern
  position absolute
  bottom 0
  top 30%
  left 0
  right 0
.invitation-pattern > svg
  position absolute
  bottom 0
  right 0
  width 100%
  height 100%
  opacity 0.8
  z-index -1
  .faded
    opacity 0.6

.invitation p
  text-transform uppercase
  font-size 1.5rem
  white-space pre
  line-height 2.5rem
  position relative
  z-index 1
  margin-bottom 10px

.invitation h2
  white-space pre
  letter-spacing: 0.2rem
  margin-bottom 25px

.invitation .invitation__intro
  background #fff
  position relative
  font-size 2.8rem
  padding 0 30px
  display inline-block
  font-family 'Raleway', sans-serif
  &:after
    content "..."

.stamp-container
  width 300px
  text-align center
  margin 3px auto 10px
  transform rotate(-15deg)
  position relative
  z-index 0
  img
    width 100%

@media (max-width: 520px)
  #home
    padding-top 50px
  .invitation-pattern
    top 30%
  .invitation
    min-width 300px
    width 80%
    padding 40px 0
  .invitation p
    font-size 1.2rem
  .stamp-container img
    width 70%
  .invitation h2, .invitation .invitation__intro
    font-size 1.6rem

// image switcher content
.imageSwitcher__container {
  position: relative;
  width: 600px;
  height: 425px;
  margin: 50px auto 30px;
}
.imageSwitcher__image-container {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  transition: opacity 0.3s ease-in;
  &.slideActive {
    opacity: 1;
    transition: opacity 0.3s ease-in;
  }
  img {
    width 100%
    border 4px solid champagne
  }
}

.switcherItemsNav {
  position: absolute;
  list-style: none;
  top: 85%;
  justify-content: center;
  text-align: center;
  width: 100%;
  margin: 0 auto;
  padding: 0;

  li {
    text-decoration: none;
    margin: 0 5px;
    color: txtWhite;
    background: darkblue;
    height: 40px;
    width: 40px;
    line-height: 40px;
    display: inline-block;
    border-radius: 50%;
    border: 1px solid txtWhite;
    cursor: pointer;
    &.slideActive {
      background: txtWhite;
      color: darkblue;
      border: 1px solid txtBlack;
    }
  }
}

.imageSwitcher__container + p {
  max-width 600px
  margin 0 auto
  text-align center
  line-height 1.5
}

@media (max-width: 680px)
  .imageSwitcher__container
    width 400px
    height 275px
    margin-top 20px
  .imageSwitcher__container + p
    font-size 1.3rem
    width 300px
    padding 0 5px
@media (max-width: 420px)
  .imageSwitcher__container
    width 300px
    height 200px
  .switcherItemsNav
    top 80%
    font-size 1.3rem
