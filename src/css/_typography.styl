@import url('https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300|Cormorant+Unicase:300');

html
  font-size 62.5%

body
  font-size 1.8rem
  font-family: 'Open Sans Condensed', sans-serif;

h1, h2
  text-align center
  font-weight normal
  margin 0
  font-family 'Cormorant Unicase', serif

h2,h3,h4
  font-weight normal

a:focus, a:hover, a:active
  opacity 0.5
  outline 0

section h1::after
  content ""
  height 2px
  width 30px
  display block
  background berryRed
  margin 10px auto
